    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Frontend Server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/racecs-server-frontend"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Backend Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/racecs-server-backend",
            "program": "${workspaceFolder}/racecs-server-backend/index.js"
        }
    ]
}